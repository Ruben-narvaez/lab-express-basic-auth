



    <div class="row justify-content-center">

        <div class="col-md-6">
        <h1>New user Register</h1>

            <form method="POST" action="/signup">
                <div class="form-group">
                    <label for="userInput">Username</label>
                    <input name="username" type="text" class="form-control" id="userInput" required="true" placeholder="Username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" id="password" required="true" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-primary">Register!</button>
            </form>
            {{{errorMsg}}}
        </div>
    
    </div>



